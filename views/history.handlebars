<div class="page-header">
    <h1>History</h1>
</div>

<div class="row">
    <div class="col-md-12" >
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Target</th>
                    <th scope="col">Date</th>
                    <th scope="col">Flag status</th>
                    <th scope="col"></th>
                </tr>
            </thead>
            <tbody>
                {{#each history}}
                <tr>
                    <th scope="row">{{@index}}</th>
                    <td>{{this.target_handle}}</td>
                    <td>{{this.created_At}}</td>
                    <td>{{this.is_flagged}}</td>
                    <td>
                        <button type="button" class="btn btn-primary" onclick="createHistoryViz('{{this._id}}')">
                            <i class="fa fa-eye" aria-hidden="true"></i>
                        </button>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>

<div id="viz" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="viz-title" class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="viz-body"></div>
        <canvas id="myChart" width="400" height="400"></canvas>
      </div>
      <div class="modal-footer">
        <button id="flag-button" type="button" class="btn btn-primary">Flag it!</button>
      </div>
    </div>
  </div>
</div>

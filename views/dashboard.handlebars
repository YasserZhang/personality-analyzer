<i id="id-hooker" class="invisible">{{user._id}}</i>
<div class="page-header">
    <h1>{{user.name}}'s Dashboard</h1>
</div>
<div class="row">
    <div class="col-md-9" >
         <form method="POST" id="new-tweet-form" class="form-inline" style="padding: 10px; border: solid; border-radius: 5px;">
            <div class="form-group mb-2 col-md-4">
               <input type="text" readonly class="form-control-plaintext"  value="Enter Twitter Handle to Analyze: ">
             </div>
            <div class="form-group mx-sm-3 mb-2 col-md-4">
                <input  id="userHandle" name="userHandle" type="text" placeholder="Example: DrDavidDuke" class="form-control">
            </div>
            <button id="analyze-button" class="btn btn-primary mb-2 col-md-*">Analyze</button>
        </form>
    </div>
</div>

<div id="viz" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 id="viz-title" class="modal-title"></h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <div id="viz-body"></div>
        <canvas id="myChart" width="400" height="400"></canvas>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-primary">Flag it!</button>
      </div>
    </div>
  </div>
</div>

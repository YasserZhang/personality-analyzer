<div class="page-header">
    <h1>Login <small>(<a href="/register">Register</a>)</small></h1>
</div>
<div class="row">
    <div class="col-md-4" >
      <a href="/auth/twitter" class="btn btn-primary btn-lg btn-block mt-3"><i class="fa fa-twitter"></i> Sign in Using Twitter</a>
    </div>
    <div class="col-md-8" style="border-left:1px solid #ccc;height:160px">
        <form class="form-horizontal" method="post" action="/login">
            <div class="form-group">
                <div><input  name="email" type="text" placeholder="Email" class="form-control input-md"></div>
            </div>
            <div class="form-group">
                <div><input  name="password" type="password" placeholder="Password" class="form-control input-md"></div>
            </div>
            <button id="singlebutton" name="singlebutton" style="margin-top:15px" class="btn btn-primary btn-block">Login</button>
        </form>
    </div>
</div>

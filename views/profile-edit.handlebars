<div class="page-header">
    <h1>My Profile</h1>
</div>

<form>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">ID</label>
    <div class="col-sm-10">
      <input type="text" readonly class="form-control-plaintext"  value={{user._id}}>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Name</label>
    <div class="col-sm-10">
      <input type="text"  class="form-control"  value={{user.name}}>
    </div>
  </div>

  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Email</label>
    <div class="col-sm-10">
      <input type="text"  class="form-control"  value={{user.email}}>
    </div>
  </div>

  {{#if user.has_twitter}}
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Twitter</label>
    <div class="col-sm-10">
       <a href="/twitter/remove" class="btn btn-primary"><i class="fa fa-twitter"></i> Un-link Twitter</a>
    </div>
  </div>
  {{else}}
  <div class="form-group row">
    <label class="col-sm-2 col-form-label">Twitter</label>
    <div class="col-sm-10">
       <a href="/auth/twitter" class="btn btn-primary"><i class="fa fa-twitter"></i> Link Twitter</a>
    </div>
  </div>
  {{/if}}
  <a href="/profile" id="edit" name="edit" class="btn btn-secondary">Cansel</a>
  <button id="edit" name="edit" class="btn btn-primary">Save</button>
</form>

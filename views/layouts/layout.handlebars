<!doctype html>
<html lang="en">
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/css/bootstrap.min.css" integrity="sha384-9gVQ4dYFwwWSjIDZnLEWnxCjeSWFphJiwGPXr1jddIhOegiu1FwO5qRGvFXOdJZ4" crossorigin="anonymous">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
        <link rel="stylesheet" href="/css/style.css" />
        <title>Personality Analyzer</title>
    </head>
    <body>

        <header>
            <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
                <div class="container">
                  <a class="navbar-brand" href="/">Personality Analyzer</a>
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav mr-auto">
                    {{#if user}}
                        <li class="nav-item active">
                            <a class="nav-link" href="/dashboard">Dashboard</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/history">History</a>
                        </li>
                        {{#if user.is_admin}}
                        <li class="nav-item active">
                            <a class="nav-link" href="/admin">Admin</a>
                        </li>
                        {{/if}}
                        <li class="nav-item active">
                            <a class="nav-link" href="/logout">Logout</a>
                        </li>
                    {{else}}
                        <li class="nav-item active">
                            <a class="nav-link" href="/login">Login</a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/register">Register</a>
                        </li>
                    {{/if}}
                    </ul>
                    {{#if user}}
                        {{#if user.name}}
                            <span class="navbar-text">Hello, {{user.name}}&nbsp;&nbsp;&nbsp;<a href="/profile"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a></span>
                        {{else}}
                            <span class="navbar-text">Hello, {{user.email}}&nbsp;&nbsp;&nbsp;<a href="/profile"><i class="fa fa-user-circle-o" aria-hidden="true"></i></a></span>
                         {{/if}}
                     {{/if}}
                  </div>
              </div>
            </nav>
        </header>

        <main>
            <div class="container">
              <div class="row">
                <div class="col-lg-12">
                  {{#if success_msg}}
                    <div class="alert alert-success alert-dismissible fade show">
                        {{success_msg}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                  {{/if}}

                  {{#if error_msg}}
                    <div class="alert alert-danger alert-dismissible fade show">
                        {{error_msg}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                  {{/if}}

                  {{#if errors}}
                    <div class="alert alert-danger alert-dismissible fade show">
                        {{errors.[0].msg}}
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                  {{/if}}

                  <div class="loader" style="display: none;"></div>
                  {{{body}}}

                </div>
              </div>
            </div>
        </main>

        <footer>
            <nav class="navbar navbar-light bg-light ">
                <span class="navbar-text mx-auto"><strong>Personality Analyzer</strong> by <kbd>ZAPD</kbd></span>
            </nav>
        </footer>

        <script src="https://code.jquery.com/jquery-3.3.1.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.0/umd/popper.min.js" integrity="sha384-cs/chFZiN24E4KMATLdqdvsezGxaGsi4hLGOzlXwp5UZB1LY//20VyM2taTB4QvJ" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.0/js/bootstrap.min.js" integrity="sha384-uefMccjFJAIv6A+rW+L4AHf99KvxDjWSu1z9VI8SKNVmz4sk7buKt/6v9KI65qnm" crossorigin="anonymous"></script>
        <script src="https://d3js.org/d3.v5.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/Chart.js/2.7.2/Chart.bundle.min.js"></script>
        <script src="/public/js/d3plus.full.min.js"></script>
        <script src="/public/js/ajax-application.js"></script>
        <script src="/public/js/jquery-login.js"></script>
    </body>
</html>
